<h1>Articles#index</h1>
<p>Find me in app/views/articles/index.html.erb</p>
<table class="table table-dark table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Author</th>
      <th>Body</th>
      <th>Actions</th>
    </tr>
  </thead>
	<tbody>
	  <% @articles.each do |article| %>
		<tr>
			<td> <%=article.id%></td>
			<td> <%=article.title%></td>
			<td> <%=article.author%></td>
      <td> <%=article.body%></td>
      <td> <%= link_to "View", article_show_path(article)%> 
        | <%= link_to "Edit", article_edit_path(article)%> 
        | <%= link_to "Delete", article_delete_path(article), :method => :Delete, data: {confirm: "Are you sure you want to delete this?"} %>
		</tr>
	  <% end %>
	</tbody>
</table>
<br/>
<%= link_to "New Post", articles_new_path, class:"btn btn-secondary"%>