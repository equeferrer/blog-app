<% if @articles.any?%>
  <h2> Search Results: </h2>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Body</th>
        <th>Author</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
      <tr>
        <td> <%=article.id %></td>
        <td> <%= link_to article.title, article_show_path(article) %></td>
        <td> <%=article.body%></td>
        <td> <%=article.author%></td>
      </tr>
      <% end %> 
    </tbody>
  </table>
<% else %>
  <h3> No matches to your query </h3>
<% end %>